{
  "expo": {
    "name": "fifteen-puzzles",
    "slug": "fifteen-puzzles",
    "scheme": "fifteen-puzzles",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/icon.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./src/assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#D5F7FF"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app uses the microphone to record audio.",
        "NSCameraUsageDescription": "This app uses the camera to take photos and record videos.",
        "NSAppleMusicUsageDescription": "This app needs access to your music library to play audio."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      }
    },
    "web": {
      "favicon": "./src/assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": ["expo-router", "expo-font"]
  }
}
